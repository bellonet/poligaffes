<h1><%= t "users" %></h1>

<table width="200">

  <% @users.each do |user| %>
    <tr>
      <td><%= user.email %></td>

      <td><%= link_to t('.edit', :default => t("helpers.links.edit")), edit_admin_user_path(user) %></td>
      <td><%= link_to t('.destroy', :default => t("helpers.links.destroy")), admin_user_path(user),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
</table>

<%= link_to (t 'new'), new_admin_user_path %>