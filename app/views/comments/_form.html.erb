<%= form_for([@yair, @yair.comments.build]) do |f| %>
  <p>
    <%= f.label :site %><br>
    <%= f.text_field :site %>
  </p>
  <p>
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.label :how_long %><br>
    <%= f.text_field :how_long %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>