<div class="input-group nav-search">
  <%= form_tag search_path, method: "get", :class => "form-inline input-sm" do %>
    <span class="input-group-btn input-sm">
      <%= text_field_tag :search, params[:search], class: "form-control input-sm", size: 5, placeholder: "פוליטיקאי" %>
      <%= submit_tag (t "search"), class: "btn btn-default input-sm" %>
    </span>
  <% end %>
</div>