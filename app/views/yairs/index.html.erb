<h1>Listing Yairs</h1>

<%= form_tag yairs_path, method: "get" do %>
  <%= label_tag(:search, "Search for:") %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", name: nil %>
<% end %>

<% ('A'..'Z').each do |letter| %>
	<%= link_to letter.to_s, "/byletter/#{letter}" %>
<% end %>

<%= render 'table' %>