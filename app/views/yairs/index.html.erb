
<div class="page-header">
  <h1>יאירים</h1>
</div>

<%= form_tag yairs_path, method: "get" do %>
  <%= label_tag(:search, "חפש:") %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "חפש", name: nil %>
<% end %>

<br>

<%# ('A'..'Z').each do |letter| %>

<% arr = ['א', 'ב', 'ג', 'ד', 'ה', 'ו', 'ז', 'ח', 'ט', 'י', 'כ', 'ל', 'מ', 'נ', 'ס', 'ע', 'פ', 'צ', 'ק', 'ר', 'ש', 'ת'] %>
<% arr.each do |letter| %>
  <%= link_to letter.to_s, "/byletter/#{letter}" %>
<% end %>

<br><br><br>

<%= render 'table' %>

<% if current_user %>
  <%= link_to 'יאיר חדש', new_yair_path, :class => 'btn btn-primary' %>
<% end %>

