
<h2 class="title"><%= t params[:field] %></h2>

<%# ('A'..'Z').each do |letter| %>

<% arr = ['א', 'ב', 'ג', 'ד', 'ה', 'ו', 'ז', 'ח', 'ט', 'י', 'כ', 'ל', 'מ', 'נ', 'ס', 'ע', 'פ', 'צ', 'ק', 'ר', 'ש', 'ת'] %>
<% arr.each do |letter| %>
  <%= link_to letter.to_s, "/#{params[:field]}/byletter/#{letter}", class: "letters-link" %>
<% end %>

<div class="col-md-pull-12">
	<%= render @yair %>
	<%= will_paginate @yair, renderer: BootstrapPagination::Rails %>
</div>
