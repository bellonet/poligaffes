<div class="row">
  <% if post.status == "deleted" %>
  <div class="col-md-12 post">
  <% else %>
  <div class="col-md-6 post">
  <% end %>
    <div class="col-md-11">
      <div class="post-yair">
        <div class="col-md-8"><%= post.yair.party %></div>
        <div class="col-md-4"><%= link_to post.yair.first_name + " " + post.yair.last_name, yair_path(post.yair), :class => "post-yair-link"%></div>
      </div>

      <div class="col-md-12 post-details"><%= t("status") + " " + t(post.status) + " " + t("posted_on") + " " + post.raw_post.timestamp.strftime( "%d-%m-%Y %H:%M:%S") %></div>

    </div>

    <div class="col-md-1"><%= image_tag post.social_media_account.photo.url(:thumb), size: '50x50', class: "post-acc-image" %></div>

    <div class="col-md-12 post-body">
      <% if post.body.nil? or (post.body.length < (@length || 9999)) %>
        <p><%= post.body %></p>
      <% else %>
        <p class="truncated-post"><%= truncate(post.body, length: @length || 9999) %></p>
        <p class="full-post" style="display: none;"><%= post.body %></p>
        <a class="see_more" data-toggle="collapse" href="#collapse-edit-<%= post.id %>"><%= t('keep_reading') %></a>
      <% end %>
    </div>


    <% if post.raw_post.post["story"] and post.raw_post.post["story"].exclude? "הוסי" %>
      <div class="col-md-12 post-details"><%= (t "story") + ": " %><%= post.raw_post.post["story"] %></div>
    <% end %>

    <% if post.should_have_photo? %>
      <div class="col-md-12"><%= image_tag post.raw_post.attachment.url, height: "200", class: "post-attach" %></div>
    <% elsif post.should_have_video? %>    
      <div class="col-md-12"><%= video_tag post.raw_post.attachment.url, controls: true, class: "post-attach" %></div>
    <% end %>

    <% if post.raw_post.post["caption"] %>
      <div class="col-md-12 post-details"><%= (t "caption") + ": " %><%= post.raw_post.post["caption"] %></div>
    <% end %>

  </div>

  <% if post.status == "edited" %>
    <div class="col-md-6 post">
      <div class="col-md-11">
        
        <div class="post-yair">
          <div class="col-md-8"><%= post.yair.party %></div>
          <div class="col-md-4"><%= link_to post.yair.last_name + " " + post.yair.first_name, yair_path(post.yair), :class => "post-yair-link"%></div>
        </div>

        <div class="col-md-12 post-details"><%= t "status" %> <%= (t post.status) %> <%= t "posted_on" %> <%= post.raw_post.timestamp.strftime( "%d-%m-%Y %H:%M:%S") %></div>
      </div>

      <div class="col-md-1"><%= image_tag post.social_media_account.photo.url(:thumb), size: '50x50', class: "post-acc-image" %></div>

      <div class="col-md-12 post-body">
        <% if post.raw_post.post["message"].nil? or (post.raw_post.post["message"].length < (@length || 9999)) %>
          <p><%= post.raw_post.post["message"] %></p>
        <% else %>
          <p class="truncated-post"><%= truncate(post.raw_post.post["message"], length: @length || 9999) %></p>
          <p class="full-post" style="display: none;"><%= post.raw_post.post["message"] %></p>
          <a class="see_more" data-toggle="collapse" href="#collapse-edit-<%= post.id %>"><%= t('keep_reading') %></a>
        <% end %>
      </div>

      <% if post.raw_post.post["story"] and post.raw_post.post["story"].exclude? "הוסי" %>
        <div class="col-md-12 post-details"><%= (t "story") + ": " %><%= post.raw_post.post["story"] %></div>
      <% end %>

      <% if post.should_have_photo? %>
        <div class="col-md-12"><%= image_tag post.raw_post.attachment.url, height: "230", class: "post-attach" %></div>
      <% elsif post.should_have_video? %>    
        <div class="col-md-12"><%= video_tag post.raw_post.attachment.url, controls: true, class: "post-attach" %></div>
      <% end %>

      <% if post.raw_post.post["caption"] %>
        <div class="col-md-12 post-details"><%= (t "caption") + ": " %><%= post.raw_post.post["caption"] %></div>
      <% end %>

    </div>
  <% end %>
</div>



