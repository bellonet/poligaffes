<%= form_for([@yair, @yair.posts.build]) do |f| %>
  <p>
    <%= f.label :social_media_account %><br>
    <%= f.select :social_media_account_id , options_for_select(@yair.social_media_accounts.map{ |s| [s.site, s.id] }) %>
  </p>
  <p>
    <%= f.label :status %><br>
    <%= f.text_field :status %>
  </p>
  <p>
    <%= f.label :timestamp %><br>
    <%= f.datetime_field :timestamp %>
  </p>
  <p>
    <%= f.label :duration %><br>
    <%= f.text_field :duration %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>


  <p>
    <%= f.submit %>
  </p>
<% end %>